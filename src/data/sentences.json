    {
      "title": "Questions",
      "description": "Two types of questions in German",
      "patterns": [
        {
          "name": "Yes/No Questions",
          "structure": ["VERB", "Subject", "Rest", "?"],
          "example": "Lernst du Deutsch?",
          "exampleEn": "Do you learn German?"
        },
        {
          "name": "W-Questions",
          "structure": ["W-Word", "VERB", "Subject", "Rest", "?"],
          "example": "Was lernst du?",
          "exampleEn": "What do you learn?"
        }
