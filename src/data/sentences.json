  "sections": [
    {
      "title": "Main Clause (Hauptsatz)",
      "description": "The verb is ALWAYS in position 2",
      "patterns": [
        {
          "name": "Standard (SVO)",
          "structure": ["Subject", "VERB", "Object / Rest"],
          "example": "Ich | lerne | Deutsch.",
          "exampleEn": "I learn German."
        },
        {
          "name": "Time-first (TeSuVeRe)",
          "structure": ["Time", "VERB", "Subject", "Object / Rest"],
          "example": "Heute | lerne | ich | Deutsch.",
          "exampleEn": "Today I learn German."
        },
        {
          "name": "Object-first (Emphasis)",
          "structure": ["Object", "VERB", "Subject", "Rest"],
          "example": "Deutsch | lerne | ich | gern.",
          "exampleEn": "German I like learning."
        }
      ],
      "rules": [
        "The conjugated verb is ALWAYS in position 2 in a main clause",
        "Only ONE element can come before the verb",
        "If that element is not the subject, the subject goes right after the verb (inversion)",
        "Time-Manner-Place order for adverbs after the verb"
      ]
    },
    {
      "title": "Subordinate Clause (Nebensatz)",
      "description": "The verb goes to the END",
      "patterns": [
        {
          "name": "Because (weil)",
          "structure": ["Hauptsatz", ", weil", "Subject", "...", "VERB."],
          "example": "Ich bleibe zu Hause, weil ich krank bin.",
          "exampleEn": "I stay home because I am sick."
        },
        {
          "name": "That (dass)",
          "structure": ["Hauptsatz", ", dass", "Subject", "...", "VERB."],
          "example": "Ich glaube, dass er nett ist.",
          "exampleEn": "I believe that he is nice."
        },
        {
          "name": "When (wenn / als)",
          "structure": ["Wenn/Als", "Subject", "...", "VERB,", "VERB", "Subject", "..."],
          "example": "Wenn es regnet, bleibe ich zu Hause.",
          "exampleEn": "When it rains, I stay home."
        }
      ],
      "conjunctions": [
        { "german": "weil", "english": "because", "verbPosition": "end" },
        { "german": "dass", "english": "that", "verbPosition": "end" },
        { "german": "wenn", "english": "when / if (present/future)", "verbPosition": "end" },
        { "german": "als", "english": "when (past, one-time)", "verbPosition": "end" },
        { "german": "obwohl", "english": "although", "verbPosition": "end" },
