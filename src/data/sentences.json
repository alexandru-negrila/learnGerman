    {
      "title": "Negation",
      "description": "nicht vs. kein",
      "rules": [
        {
          "word": "kein",
          "usage": "Negates nouns with ein/eine or no article",
          "example": "Ich habe kein Auto.",
          "exampleEn": "I don't have a car."
        },
        {
          "word": "nicht",
          "usage": "Negates verbs, adjectives, adverbs, and nouns with definite articles",
          "example": "Ich komme nicht aus Berlin.",
          "exampleEn": "I don't come from Berlin."
        }
      ],
      "nichtPosition": [
        "Before adjectives: Das ist nicht gut.",
        "Before prepositional phrases: Ich gehe nicht in die Schule.",
        "At the end for general negation: Ich schlafe nicht.",
        "Before the second verb part: Ich kann nicht schwimmen."
      ]
    },
